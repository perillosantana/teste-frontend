<!DOCTYPE html>
<html lang=”pt_BR”>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Teste FrontEnd</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/dist/main.css" />
</head>

<body class="balance">
    <header class="grid-container">
        <div class="hide-for-small-only">
            <div class="grid-x grid-margin-x">
                <div class="cell small-2">
                    <div class="neon-logo">
                        <a href="/">
                            <img src="/src/images/neon-logo-02.png" alt="Neon">
                        </a>
                    </div>
                </div>
                
                <div class="cell small-8">
                    <h1 class="text-center neon-title">saldo <span>R$ {{balance}}</span></h1>
                </div>
            </div>
        </div>
        
        <div class="show-for-small-only">
            <div class="grid-x grid-margin-x">
                <div class="cell small-4">
                    <div class="neon-logo">
                        <a href="/">
                            <img src="/src/images/neon-logo-01.png" alt="Neon" />
                        </a>
                    </div>
                </div>
                
                <div class="cell small-8">
                    <h1 class="text-center neon-title">saldo</h1>
                </div>
            </div>
        </div>
    </header>
    
    <main class="grid-container">
        <div class="grid-x grid-margin-x">
            <div class="cell">
                <div class="neon-slider">
                    <ul class="no-bullet clearfix neon-slider-items">
                        {% for item in financialHistory %}
                            <li>
                                <h4 class="neon-slider-title">{{ item.year }}</h4>
                                <h3 class="neon-slider-sub-title">Bem-vindo</h3>
                                
                                <div class="neon-slider-history">
                                    <ul class="no-bullet clearfix">
                                        {% for history in item.history %}
                                            <li>
                                                <table>
                                                <tbody>
                                                        <tr>
                                                            <td class="neon-slider-history-table-image hide-for-small-only">
                                                                <img src="/src/images/{{ history.iconCategory }}" alt="Icon Category">
                                                            </td>

                                                            <td class="neon-slider-history-table-content">
                                                                <p class="neon-slider-history-category show-for-small-only">{{ history.category }}</p>
                                                                <p class="neon-slider-history-title">{{ history.title }}</p>
                                                                <p class="{{ history.status }} neon-slider-history-price">R$ <span>{{ history.value }}</span></p>
                                                            </td> 

                                                            <td class="neon-slider-history-table-remove">
                                                                <a class="neon-slider-history-btn-remove">
                                                                    <img src="/src/images/icon-delete.png" alt="Remove Item">
                                                                </a>
                                                            </td>
                                                        </tr>
                                                </tbody>
                                                </table>
                                            </li>
                                        {% else %}
                                            <li>
                                                <p>Vazio :(</p>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>

                    <ul class="no-bullet clearfix neon-slider-dots">
                        {% for item in financialHistory %}
                            <li><button type="button"></button></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </main>
    
    <script type="text/javascript" src="/dist/main.js"></script>
</body>

</html>